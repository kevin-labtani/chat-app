<div class="container shadow-sm bg-light vh-100">
  <nav class="navbar navbar-light bg-light">
    <a class="text-reset text-muted text-decoration-none" href="/">
      <h1>DisChat</h1>
    </a>
    <a href="/users/logout" class="btn btn-danger ml-auto " id="logout">
      Logout
    </a>
  </nav>
  <div class="text-center">
    <h2 class="mt-3 mb-3" id="name">Welcome <%= name %></h2>
  </div>
  <div class="row bg-light">
    <div class="col-md-2">
      <h3>Online</h3>
      <div id="members"></div>
    </div>
    <div class="col-md-10">
      <h3>Messages</h3>
      <div id="all_mess" class="overflow-auto border" style="height: 280px;">
        <div class="">
          <% messages.forEach(function(message){ %>
          <div class="border-bottom border-top " style="height: 60px;">
            <span class="d-block pl-3 font-weight-bold text-info"
              ><%= message.name %>
            </span>
            <span class="pl-3 pt-2"><%= message.message %></span>
          </div>
          <% }) %>
        </div>
      </div>
      <form action="" id="messForm">
        <label for="message" class="hidden">Message</label>
        <textarea
          name="message"
          id="message"
          class="form-control"
          placeholder="Your message"
        ></textarea>
        <div id="error" style="opacity: 0; font-size: 0.8rem;">
          *You are not allowed to use ">" and "<" symbols
        </div>
        <input
          type="submit"
          class="btn btn-primary"
          value="Send"
          id="submit"
          disabled
        />
      </form>
    </div>
  </div>
</div>

